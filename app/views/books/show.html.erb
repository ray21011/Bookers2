<div>
  <%= flash[:notice] %>
</div>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
      <table class="table">
        <tbody>
          <%= image_tag @user.get_profile_image(100,100) %>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user_path(current_user.id)" do %>
        <i class="fas fa-user-cog" aria-hidden="true"></i>
        <% end %>
      </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book_new, url: '/books', method: :post do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control book_title" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</h4>
        <%= f.text_area :body, class: "form-control book_body" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      </div>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(100,100) %>
              <div><%= @user.name %></div>
              <% end %>
            </th>
            <th><%= link_to @book.title, book_path(@book.id)%></th>
            <th><%= @book.body %></th>
            <% if @book.user == current_user %>
              <th><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book(@book.id)" %></th>
            <% end %>
            <% if @book.user == current_user %>
              <th><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger destroy_book(@book.id)" %></th>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>